pipeline {
    agent any
    tools {
        nodejs 'nodejs21'
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scmGit(branches: [[name: '*/main']], extensions: [], userRemoteConfigs: [[url: 'https://github.com/rubuyathimona/KoodJohviCICD']])
                echo 'Checkout Done'
            }
        }
        stage('install dependencies') {
            steps {
                sh 'npm install'
                echo "npm installed"
            }
        }
        stage('build') {
            steps {
                sh 'npm run build'
                echo "build complete"
            }
        }
        stage('deployment') {
            steps {
                sh 'mkdir /kj_deployments/imona'
                sh 'cp -r dist/kood-johvi-cicd/browser/* /kj_deployments/imona'
                echo "build complete"
            }
        }
    }
}
